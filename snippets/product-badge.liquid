{%- if tags contains 'badge:new' or tags contains 'badge:new' or tags contains 'badge:limited' -%}
  <div class="absolute top-12 left-8 flex items-center gap-x-4 shadow-xs rounded-[4px] z-[1] bg-white py-2 px-8 text-body-copy-small">
    {%- if tags contains 'badge:new' -%}
      <img src="{{ settings.emoji_new }}" width="16" height="16"><span>New</span>
    {%- elsif tags contains 'badge:trending' -%}
      <img src="{{ settings.emoji_trending }}" width="16" height="16"><span>Trending</span>
    {%- elsif tags contains 'badge:limited' -%}
      <img src="{{ settings.emoji_limited }}" width="16" height="16"><span>Limited</span>
    {%- elsif tags contains 'badge:water-resistant' -%}
      <img src="{{ settings.emoji_wine }}" width="16" height="16"><span>Water Resistant</span>
    {%- endif -%}
  </div>
{%- endif -%}
