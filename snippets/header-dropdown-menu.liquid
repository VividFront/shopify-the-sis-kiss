{% comment %}
  Renders a standard dropdown style menu for the header.

  Usage:
  {% render 'header-dropdown-menu' %}
{% endcomment %}

<nav class="header__inline-menu">
  <ul class="list-menu list-menu--inline" role="list">
    {%- comment %}<locksmith:e33e>{% endcomment -%}
      {%- assign locksmith_30f8_forloop__size = 0 %}{%- for link in section.settings.menu.links -%}{% capture var %}{% render 'locksmith-variables', scope: 'subject', subject: link, subject_parent: section.settings.menu, variable: 'transparent' %}{% endcapture %}{% if var == 'true' %}{% assign locksmith_30f8_forloop__size = locksmith_30f8_forloop__size | plus: 1 %}{% endif %}{% endfor %}{% assign locksmith_30f8_forloop__index = nil -%}
    {%- comment %}</locksmith:e33e>{% endcomment -%}
    {%- for link in section.settings.menu.links -%}
      {%- comment %}<locksmith:3978>{% endcomment -%}
        {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: link, subject_parent: section.settings.menu, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% if locksmith_30f8_forloop__index == nil %}{% assign locksmith_30f8_forloop__index = 1 %}{% assign locksmith_30f8_forloop__index0 = 0 %}{% else %}{% assign locksmith_30f8_forloop__index = locksmith_30f8_forloop__index | plus: 1 %}{% assign locksmith_30f8_forloop__index0 = locksmith_30f8_forloop__index0 | plus: 1 %}{% endif %}{% if locksmith_30f8_forloop__index == 1 %}{% assign locksmith_30f8_forloop__first = true %}{% else %}{% assign locksmith_30f8_forloop__first = false %}{% endif %}{% if locksmith_30f8_forloop__index == locksmith_30f8_forloop__size %}{% assign locksmith_30f8_forloop__last = true %}{% else %}{% assign locksmith_30f8_forloop__last = false %}{% endif %}{% assign locksmith_30f8_forloop__rindex = locksmith_30f8_forloop__size | minus: locksmith_30f8_forloop__index | minus: 1 %}{% assign locksmith_30f8_forloop__rindex0 = locksmith_30f8_forloop__size | minus: locksmith_30f8_forloop__index0 | minus: 1 %}{% else %}{% continue %}{% endif -%}
      {%- comment %}</locksmith:3978>{% endcomment -%}
      <li>
        {%- if link.links != blank -%}
          <header-menu>
            <details id="Details-HeaderMenu-{{ locksmith_30f8_forloop__index }}">
              <summary class="header__menu-item list-menu__item link focus-inset">
                <span
                  {%- if link.child_active %}
                    class="header__active-menu-item"
                  {% endif %}
                >
                  {{- link.title | escape -}}
                </span>
                {% render 'icon-caret' %}
              </summary>
              <ul
                id="HeaderMenu-MenuList-{{ locksmith_30f8_forloop__index }}"
                class="header__submenu list-menu list-menu--disclosure gradient caption-large motion-reduce global-settings-popup"
                role="list"
                tabindex="-1"
              >
                {%- comment %}<locksmith:09e1>{% endcomment -%}
                  {%- assign locksmith_83bc_forloop__size = 0 %}{%- for childlink in link.links -%}{% capture var %}{% render 'locksmith-variables', scope: 'subject', subject: childlink, subject_parent: link, variable: 'transparent' %}{% endcapture %}{% if var == 'true' %}{% assign locksmith_83bc_forloop__size = locksmith_83bc_forloop__size | plus: 1 %}{% endif %}{% endfor %}{% assign locksmith_83bc_forloop__index = nil -%}
                {%- comment %}</locksmith:09e1>{% endcomment -%}
                {%- for childlink in link.links -%}
                  {%- comment %}<locksmith:12bb>{% endcomment -%}
                    {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: childlink, subject_parent: link, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% if locksmith_83bc_forloop__index == nil %}{% assign locksmith_83bc_forloop__index = 1 %}{% assign locksmith_83bc_forloop__index0 = 0 %}{% else %}{% assign locksmith_83bc_forloop__index = locksmith_83bc_forloop__index | plus: 1 %}{% assign locksmith_83bc_forloop__index0 = locksmith_83bc_forloop__index0 | plus: 1 %}{% endif %}{% if locksmith_83bc_forloop__index == 1 %}{% assign locksmith_83bc_forloop__first = true %}{% else %}{% assign locksmith_83bc_forloop__first = false %}{% endif %}{% if locksmith_83bc_forloop__index == locksmith_83bc_forloop__size %}{% assign locksmith_83bc_forloop__last = true %}{% else %}{% assign locksmith_83bc_forloop__last = false %}{% endif %}{% assign locksmith_83bc_forloop__rindex = locksmith_83bc_forloop__size | minus: locksmith_83bc_forloop__index | minus: 1 %}{% assign locksmith_83bc_forloop__rindex0 = locksmith_83bc_forloop__size | minus: locksmith_83bc_forloop__index0 | minus: 1 %}{% else %}{% continue %}{% endif -%}
                  {%- comment %}</locksmith:12bb>{% endcomment -%}
                  <li>
                    {%- if childlink.links == blank -%}
                      <a
                        href="{{ childlink.url }}"
                        class="header__menu-item list-menu__item link link--text focus-inset caption-large{% if childlink.current %} list-menu__item--active{% endif %}"
                        {% if childlink.current %}
                          aria-current="page"
                        {% endif %}
                      >
                        {{ childlink.title | escape }}
                      </a>
                    {%- else -%}
                      <details id="Details-HeaderSubMenu-{{ locksmith_83bc_forloop__index }}">
                        <summary class="header__menu-item link link--text list-menu__item focus-inset caption-large">
                          <span>{{ childlink.title | escape }}</span>
                          {% render 'icon-caret' %}
                        </summary>
                        <ul
                          id="HeaderMenu-SubMenuList-{{ locksmith_83bc_forloop__index }}"
                          class="header__submenu list-menu motion-reduce"
                        >
                          {%- for grandchildlink in childlink.links -%}
                            {%- comment %}<locksmith:cd6e>{% endcomment -%}
                              {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: grandchildlink, subject_parent: childlink, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
                            {%- comment %}</locksmith:cd6e>{% endcomment -%}
                            <li>
                              <a
                                href="{{ grandchildlink.url }}"
                                class="header__menu-item list-menu__item link link--text focus-inset caption-large{% if grandchildlink.current %} list-menu__item--active{% endif %}"
                                {% if grandchildlink.current %}
                                  aria-current="page"
                                {% endif %}
                              >
                                {{ grandchildlink.title | escape }}
                              </a>
                            </li>
                          {%- endfor -%}
                        </ul>
                      </details>
                    {%- endif -%}
                  </li>
                {%- endfor -%}
              </ul>
            </details>
          </header-menu>
        {%- else -%}
          <a
            href="{{ link.url }}"
            class="header__menu-item list-menu__item link link--text focus-inset"
            {% if link.current %}
              aria-current="page"
            {% endif %}
          >
            <span
              {%- if link.current %}
                class="header__active-menu-item"
              {% endif %}
            >
              {{- link.title | escape -}}
            </span>
          </a>
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</nav>
