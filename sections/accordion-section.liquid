<div class="p-section-md">
  <div class="container">
    <div class="grid grid-cols">
      <div class="col-start-1 col-end-7 lg:col-start-3 lg:col-end-11">
        <h2 class="text-center">{{ section.settings.heading }}</h2>
        <div class="tsk-product-accordion mt-32 [&_+_.tsk-product-accordion]:mt-0 first-of-type:mt-32 quick-add-hidden">
          {% for block in section.blocks %}
            {% if block.type == 'accordion' %}
              <details class="group border-border border px-16 -mb-[1px]">
                <summary class="py-8 flex items-center justify-between relative">
                  <h6>{{ block.settings.heading }}</h6>
                  <span class="text-primary inline-block group-open:[display:none]" aria-hidden="true">{%- render 'icon-plus' %}</span>
                  <span class="text-primary [display:none] group-open:inline-block" aria-hidden="true">{%- render 'icon-minus' %}</span>
                </summary>
                <div class="pt-10 pb-24 richtext-content">
                  {{ block.settings.body }}
                </div>
              </details>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Accordion Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "accordion",
      "name": "Accordion",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "body",
          "label": "Body"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Accordion Section"
    }
  ]
}
{% endschema %}