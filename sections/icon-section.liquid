<div class="bg-ui-pink p-section-md">
  <div class="container">
    <div class="grid grid-cols gap-grid gap-y-32">
      {% for block in section.blocks %}
        {% if block.type == 'icon-item' %}
          <div class="sm:col-start-2 lg:col-start-auto col-span-full sm:col-span-4 lg:col-span-3">
            <div class="text-center">
              <div class="flex justify-center">
                <img class="w-100 h-100 object-contain" loading="lazy" src="{{ block.settings.icon | img_url: 'master' }}" alt="{{ block.settings.icon.alt }}"/>
              </div>
              <h4 class="mt-20">{{ block.settings.heading }}</h4>
              <p class="mt-8 richtext-content">{{ block.settings.body }}</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Icon Section",
  "tag": "section",
  "class": "section",
  "blocks": [
    {
      "type": "icon-item",
      "name": "Icon Item",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "body",
          "label": "Body"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icons Section"
    }
  ]
}
{% endschema %}
