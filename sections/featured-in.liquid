<div class="bg-white p-section-md">
  <div class="container">
    {% if section.settings.heading != blank %}
      <div class="grid grid-cols">
        <div class="col-span-full lg:col-start-5 lg:col-span-4">
          <h2 class="h4 text-center mb-12">{{ section.settings.heading }}</h2>
        </div>
      </div>
    {% endif %}
    <div class="grid grid-cols gap-grid gap-y-32">
      {% for block in section.blocks %}
        {% if block.type == 'logo' %}
          <div class="col-span-3">
            {%- if block.settings.url != blank -%}<a href="{{ block.settings.url }}">{%- endif -%}
            <img class="aspect-3/1 object-contain" loading="lazy" src="{{ block.settings.logo | img_url: 'master' }}" alt="{{ block.settings.logo.alt }}"/>
            {%- if block.settings.url != blank -%}</a>{%- endif -%}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Featured In",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Icon Item",
      "limit": 8,
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured In"
    }
  ]
}
{% endschema %}
