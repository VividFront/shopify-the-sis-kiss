<div class="relative p-section-md lg:h-[480px] flex items-center bg-white lg:bg-transparent">
  <div class="absolute left-0 top-0 w-full h-full z-[-1] tw-hidden lg:block">
    {% if section.settings.background_image != blank %}
      {{ section.settings.background_image | image_url: width: 1500 | image_tag:
        width: section.settings.background_image.width,
        class: 'h-full w-full object-cover',
        sizes: section.settings.background_image.sizes,
        widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
        alt: section.settings.background_image.alt | escape
      }}
    {% endif %}
  </div>
  <div class="container">
    <div class="lg:grid grid-cols">
      <div class="lg:col-start-2 lg:col-end-8 xl:col-end-7">
        {% if section.settings.image_mobile != blank %}
          <div class="lg:hidden aspect-4/3">
            {{ section.settings.image_mobile | image_url: width: 1500 | image_tag:
              width: section.settings.image_mobile.width,
              class: 'h-full w-full object-cover',
              sizes: section.settings.image_mobile.sizes,
              widths: '375, 550, 750, 1100',
              alt: section.settings.image_mobile.alt | escape
            }}
          </div>
        {% endif %}
        <div class="text-center mt-32 lg:mt-0">
          <h2>{{ section.settings.heading }}</h2>
          <p class="mt-12">{{ section.settings.body }}</p>
          {% if section.settings.cta_url != blank %}
            {%- render 'button-secondary', url: section.settings.cta_url, text: section.settings.cta_text, class: 'mt-24' -%}
          {% endif %}
        </div>
      </div>
    </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Full Width Image Callout",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "body",
      "label": "Body"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "CTA Url"
    }
  ],
  "presets": [
    {
      "name": "Full Width Image Callout"
    }
  ],
  "templates": ["index"]
}
{% endschema %}