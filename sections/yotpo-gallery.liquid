<div class="p-section-md">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2 class="text-center">{{ section.settings.heading }}</h2>
    {% endif %}
    {%- liquid 
      assign gallery_id = section.settings.gallery_id
      unless collection.metafields.custom.yotpo_gallery_id == blank
        assign gallery_id = collection.metafields.custom.yotpo_gallery_id
      endunless
    -%}
    <div
      class="yotpo yotpo-pictures-widget"
      data-gallery-id="{{ gallery_id }}">
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Yotpo Gallery",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "gallery_id",
      "label": "Gallery ID",
      "default": "6467939ccb6260364b9b9478"
    }
  ],
  "presets": [
    {
      "name": "Yotpo Gallery"
    }
  ]
}
{% endschema %}
