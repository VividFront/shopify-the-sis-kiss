<div class="bg-ui-dark p-section-sm">
  <div class="container">
    <div class="grid grid-cols gap-grid">
      <div class="col-start-1 col-end-13 lg:col-start-3 lg:col-end-11 text-center">
        <h2 class="text-white">{{ section.settings.heading }}</h2>
        {% if section.settings.body != blank %}
          <p class="mt-12 text-white">{{ section.settings.body }}</p>
        {% endif %}
        {% if section.settings.cta_url != blank %}
          {% render 'button', text: section.settings.cta_text, url: section.settings.cta_url, bg_class: 'bg-ui-dark', class: 'mt-24' %}
        {% endif %}
      </div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Callout (Centered)",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "body",
      "label": "Body"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA (Text)"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "CTA (Url)"
    }
  ],
  "presets": [
    {
      "name": "Callout (Centered)"
    }
  ]
}
{% endschema %}