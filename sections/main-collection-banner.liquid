<div>
  {% render 'breadcrumbs' %}
  <div class="container">
    <div class="grid grid-cols">
      <div class="lg:col-start-4 lg:col-end-13">
        <div class="pt-12 pb-32">
          <h1>{{ collection.title }}</h1>
          {% if collection.description != blank %}
            <div class="mt-8 richtext-content">
              {{ collection.description }}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
