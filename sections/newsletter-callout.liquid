<div class="bg-ui-dark p-section-sm">
  <div class="container">
    <div class="grid grid-cols gap-grid">
      <div class="col-start-1 col-end-7 md:col-start-2 md:col-end-6 lg:col-start-2 lg:col-end-7">
        <h4 class="text-white">{{ section.settings.heading }}</h4>
        <p class="mt-12 text-white">{{ section.settings.body }}</p>
      </div>
      <div class="mt-18 lg:mt-0 col-start-1 col-end-7 md:col-start-2 md:col-end-6 lg:col-start-7 lg:col-end-12 flex items-center h-full">
        {%- render 'newsletter-form' -%}
      </div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Newsletter Callout",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "body",
      "label": "Body"
    }
  ],
  "presets": [
    {
      "name": "Newsletter Callout"
    }
  ],
  "templates": ["index"]
}
{% endschema %}