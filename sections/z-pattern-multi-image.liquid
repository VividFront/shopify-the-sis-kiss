<div class="p-section-md">
  <div class="container">
    <div class="grid grid-cols gap-y-32 lg:gap-grid items-center">
      <div class="order-2 lg:order-1 col-start-1 col-end-7 lg:col-start-2 lg:col-end-6">
        <h2>{{ section.settings.heading }}</h2>
        {% if section.settings.body != blank %}
          <p class="mt-12">{{ section.settings.body }}</p>
        {% endif %}
        {% if section.settings.cta_url != blank %}
          {%- render 'button-secondary', url: section.settings.cta_url, text: section.settings.cta_text, class: 'mt-24' -%}
        {% endif %}
      </div>
      <div class="order-1 lg:order-2 col-start-1 col-end-7 lg:col-start-6 lg:col-end-12">
        <div class="flex gap-30">
          <div class="tw-hidden md:block basis-1/4 self-start">
            {{ section.settings.image_1 | image_url: width: 900 | image_tag:
              width: section.settings.image_1.width,
              class: 'aspect-square rounded object-cover',
              sizes: section.settings.image_1.sizes,
              widths: '375, 550, 750, 1100',
              alt: section.settings.image_1.alt | escape
            }}
          </div>
          <div class="basis-full md:basis-1/2">
            {{ section.settings.image_2 | image_url: width: 900 | image_tag:
              width: section.settings.image_2.width,
              class: 'aspect-3/4 rounded object-cover',
              sizes: section.settings.image_2.sizes,
              widths: '375, 550, 750, 1100',
              alt: section.settings.image_2.alt | escape
            }}
          </div>
          <div class="tw-hidden md:block basis-1/4 self-end">
            {{ section.settings.image_3 | image_url: width: 900 | image_tag:
              width: section.settings.image_3.width,
              class: 'aspect-square rounded object-cover',
              sizes: section.settings.image_3.sizes,
              widths: '375, 550, 750, 1100',
              alt: section.settings.image_3.alt | escape
            }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Z Pattern (Multi Image)",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "body",
      "label": "Body"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "CTA Url"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image (First)"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image (Second)"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image (Third)"
    }
  ],
  "presets": [
    {
      "name": "Z Pattern (Multi Image)"
    }
  ]
}
{% endschema %}