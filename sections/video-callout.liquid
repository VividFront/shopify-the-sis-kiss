<div class="relative p-section-md bg-ui-pink">
  <div class="container">
    <div class="lg:grid grid-cols gap-grid">
      <div class="lg:col-start-2 lg:col-end-6">
        <div class="relative">
          {% if section.settings.thumbnail != blank %}
            <div class="aspect-[4/7] w-full max-w-[440px] mx-auto">
              {{ section.settings.thumbnail | image_url: width: 1500 | image_tag:
                width: section.settings.thumbnail.width,
                class: 'object-cover h-full w-full rounded',
                sizes: section.settings.thumbnail.sizes,
                widths: '375, 550, 750, 1100',
                alt: section.settings.thumbnail.alt | escape
              }}
            </div>
          {% endif %}
        </div>
      </div>
      <div class="mt-28 lg:mt-0 lg:col-start-6 lg:col-end-12">
        <div class="flex flex-col justify-center h-full">
          <h2 class="h2-alt">{{ section.settings.heading }}</h2>
          <div class="mt-16 richtext-content">{{ section.settings.body }}</div>
          {% if section.settings.cta_url != blank %}
            {%- render 'button-secondary', url: section.settings.cta_url, text: section.settings.cta_text, class: 'mt-24' -%}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Video Callout",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "thumbnail",
      "label": "Video Thumbnail"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "label": "Video URL",
      "accept": [
        "youtube",
        "vimeo"
      ]    
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "body",
      "label": "Body"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "CTA Url"
    }
  ],
  "presets": [
    {
      "name": "Video Callout"
    }
  ]
}
{% endschema %}